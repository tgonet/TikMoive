<?xml version="1.0" encoding="utf-8"?>
    android:background="@drawable/favourites"


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_revert" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            tools:ignore="ImageContrastCheck"
            tools:src="@tools:sample/avatars" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />

        <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="221dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="FILTER" />

    </LinearLayout>

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="MY FAVOURITES" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="425dp"
            android:layout_height="107dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="102dp"
                android:layout_height="108dp"
                tools:src="@drawable/basketballdiaries" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/woldofwallstreet" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/django" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="108dp"
                android:layout_weight="1"
                tools:src="@drawable/gatsby" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="104dp"
                    android:layout_height="29dp"
                    android:src="@android:drawable/btn_star_big_on" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="88dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_star_big_on" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="92dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_star_big_on" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="61dp"
                    android:layout_height="29dp"
                    android:layout_weight="1"
                    android:src="@android:drawable/btn_star_big_on" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            tools:src="@drawable/gilbertgrape" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            tools:src="@drawable/inception" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="119dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:src="@drawable/romeojuilet" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:src="@drawable/thisboylife" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star_big_on" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star_big_on" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star_big_on" />

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@android:drawable/btn_star_big_on" />
    </LinearLayout>


</LinearLayout>
